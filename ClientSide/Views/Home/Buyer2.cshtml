@{
    ViewBag.Title = "About";
}


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<!-- Main content -->
<main>

    <br><br>
    <!-- First container -->
    <div class="container">

        <!-- Section: Details -->
        <section id="details" class="section">

            <!-- Secion heading -->
            <h2 class="xs text-uppercase font-weight-bold mb-3 pt-4 mt-5 wow fadeIn" data-wow-delay=".1s">Payment History</h2>

            <hr class="mb-5">

            <!-- Grid row -->
            <div class="row mt-5 mb-2">

                <!-- Grid column -->
                <div class="col-lg-12 col-md-12 mb-2  wow fadeIn" data-wow-delay=".4s">
                    <div class="table-responsive card">

                        <div class="card-body">
                            <!--Header-->
                            <div class="formHeader mb-1 pt-3">
                                <h3><i class="far fa-clipboard"></i> Payment Details</h3>
                                <br>
                            </div>
                            <table id="datatables1" class="table table-striped table-bordered table-responsive-md" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Firstname</th>
                                        <th>Surname</th>
                                        <th>Address</th>
                                        <th>Amount</th>
                                        <th>Card type</th>
                                        <th>Pay date</th>
                                        <th>Approved</th>
                                        <th>Currency</th>
                                    </tr>
                                </thead>
                                <tbody id="oPP"></tbody>
                            </table>
                        </div>
                    </div>


                </div>
                <!-- Grid column -->


            </div>
            <!-- Grid row -->

        </section>
        <!-- Section: Registration -->


    </div>
    <!-- First container -->


</main>
<!-- Main content -->
