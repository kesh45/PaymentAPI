
@{
    ViewBag.Title = "buy1";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<!-- Main content -->
<main>
    <br><br>
    <br>

    <!-- First container -->
    <div class="container">
        <!-- Section: Checkout -->
        <section id="checkout" class="section">
            <!-- Secion heading -->
            <h2 class="xs text-uppercase font-weight-bold mb-3 pt-4 mt-5 wow fadeIn" data-wow-delay=".1s">Checkout</h2>
            <div class="row">
                <form id="registration-form">
                    <!--Grid column-->
                    <div class="col-md-12 mb-md-0 mb-5">


                        <!--Grid row-->
                        <div class="row">
                            <!--Grid column-->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <input type="text" id="fname" data-validation="required" class="form-control">
                                    <label for="name" class="">Your Firstname</label>
                                </div>
                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <input type="text" id="sname" data-validation="required" class="form-control">
                                    <label for="Surname" class="">Your Surname</label>
                                </div>
                            </div>
                            <!--Grid column-->

                        </div>
                        <!--Grid row-->
                        <!--Grid row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <input type="text" data-validation="required" id="address" class="form-control">
                                    <label for="Address" class="">Address</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="md-form mb-0">
                                    <input type="email" data-validation="required email" id="email" class="form-control">
                                    <label for="Email" class="">Your Email</label>
                                </div>
                            </div>

                        </div>
                        <!--Grid row-->
                        <!--Grid row-->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="md-form mb-0">
                                    <input type="text" data-validation="required" id="cardnumber" class="form-control">
                                    <label for="Card number" class="">Card Number</label>
                                </div>
                            </div>

                            <!--Grid row-->
                            <div class="col-md-3">

                                <select class="mdb-select md-form mb-0" id="card" searchable="Search here..">
                                    <option disabled selected>Choose your card</option>
                                    <option value="Visa"> Visa</option>
                                    <option value="Mastercard">Mastercard</option>
                                    <option value="American Express">American Express</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <div class="md-form mb-0">
                                    <input type="password" data-validation="number required length" data-validation-length="3" maxlength="3" id="cvv" class="form-control">
                                    <label for="Cvv" class="">Cvv Number</label>
                                </div>
                            </div>

                            <!--Grid row-->

                            <div class="col-md-3">
                                <div class="md-form mb-0">
                                    <input type="text" id="exp" data-validation="required length" data-validation-length="7" maxlength="7" class="form-control">
                                    <label for="Date Expiration" class="">Date Expiration (mm/yyyy)</label>
                                </div>
                            </div>
                        </div>
                        <!--Grid row-->
                        <!--Grid row-->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="md-form input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text md-addon">$</span>
                                    </div>
                                    <input type="text" class="form-control" data-validation="required number" data-validation-allowing="float" id="amount" placeholder="amount">
                                    <div class="input-group-append">
                                        <span class="input-group-text md-addon">.00</span>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!--Grid row-->
                        <br />
                        <div class="text-center text-md-right">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="submit" id="btn_pay" class="btn peach-gradient toggle-disabled">Pay Now</button>
                                <button type="button" id="btn_payer" class="btn peach-gradient">Cancel</button>
                            </div>
                        </div>




                    </div>
                    <!--Grid column-->
                </form>
            </div>
        </section>
        <!-- Section: Checkout -->

        <br />
    </div>
    <!-- First container -->


</main>
<!-- Main content -->
